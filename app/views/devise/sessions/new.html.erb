<div class="login border-bottom">
  <h1 class="text-center bold">AEC</h1>

  <%= simple_form_for resource, as: resource_name, url: session_path(resource_name), remote: true do |f| %>
    <%= f.error_notification %>

    <%= f.input :email, placeholder: 'ejemplo@gmail.com', label: 'Correo electrónico', autofocus: true %>
    <%= f.input :password, placeholder: 'min. 8 caracteres', label: 'Contraseña' %>
    <%= f.input :remember_me, as: :boolean, label: 'Recordarme', wrapper_html: { class: 'text-left' } %>
    <div class="text-right">
      <%=
        link_to t("devise.passwords.forgot"),
          new_password_path(resource_name),
          class: 'mg'
      %>

      <%= f.submit 'Entrar' %>
    </div>
  <% end %>
</div>

<div class="text-center muted pd-tp-2">
  Si no tienes cuenta,
  <%= link_to "regístrate aquí.", new_member_registration_path %>
</div>
