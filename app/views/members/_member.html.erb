<div class="row border">
  <div class="border-right px-25 ml-2">
    <% if @group.last_attendance_recent? %>
      <%= f.input :attendance, as: :boolean, label: false, input_html: { checked: member.was_present_last_time? } %>
    <% else %>
      <%= f.input :attendance, as: :boolean, label: false, input_html: { checked: true } %>
    <% end %>
  </div>
  <div class="col border-right">
    <%= member.name.titleize %>
  </div>
  <div class="col border-right">
    <%= member.classification %>
  </div>
  <div class="col border-right <%= status_to_color_class(member.status) %>">
    <%= status_in_spanish(member.status) %>
  </div>
  <div class="col border-right">
    <%= format_phone(member.phone) %>
  </div>
</div>
